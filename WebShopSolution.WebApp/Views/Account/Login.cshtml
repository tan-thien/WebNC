@model WebShopSolution.ViewModels.Catalog.Account.AccountLoginRequest

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card shadow p-4" style="max-width: 400px; width: 100%;">
        <h3 class="text-center mb-4" style="color: #007bff;">Đăng nhập</h3>

        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label fw-semibold"></label>
                <input asp-for="UserName" class="form-control" placeholder="Nhập tên đăng nhập..." />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="PassWord" class="form-label fw-semibold"></label>
                <input asp-for="PassWord" class="form-control" type="password" placeholder="Nhập mật khẩu..." />
                <span asp-validation-for="PassWord" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn w-100 btn-login-custom">Đăng nhập</button>
        </form>

        <p class="mt-3 text-center">
            Chưa có tài khoản?
            <a asp-controller="Account" asp-action="Register" class="link-orange">Đăng ký tại đây</a>
        </p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .btn-login-custom {
        background-color: #007bff;
        color: #ff6600;
        border: 2px solid #007bff;
        font-weight: 500;
        transition: 0.3s;
    }

        .btn-login-custom:hover {
            background-color: #fff;
            color: #007bff;
            border-color: #007bff;
        }

    .link-orange {
        color: #ff6600;
        font-weight: 500;
        transition: 0.2s;
    }

        .link-orange:hover {
            color: #cc5200;
            text-decoration: underline;
        }
</style>
