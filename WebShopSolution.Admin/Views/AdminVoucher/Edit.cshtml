@model WebShopSolution.ViewModels.Catalog.Voucher.VoucherUpdateRequest

@{
    ViewData["Title"] = "Chỉnh sửa Voucher";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="VoucherId" />

    <div class="form-group">
        <label asp-for="Code">Mã voucher</label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name">Tên (tuỳ chọn)</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description">Mô tả</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="DiscountType">Loại giảm giá</label>
        <select asp-for="DiscountType" class="form-control">
            <option value="0" selected="@(Model.DiscountType == 0)">Giảm tiền cố định</option>
            <option value="1" selected="@(Model.DiscountType == 1)">Giảm theo %</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="DiscountValue">Giá trị giảm</label>
        <input asp-for="DiscountValue" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="MaxDiscountValue">Giảm tối đa (nếu %)</label>
        <input asp-for="MaxDiscountValue" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Quantity">Số lượt phát hành</label>
        <input asp-for="Quantity" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="UserLimit">Giới hạn / khách</label>
        <input asp-for="UserLimit" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="StartDate">Từ ngày</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate">Đến ngày</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <div class="form-check mt-2">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label">Kích hoạt</label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Quay lại</a>
</form>
