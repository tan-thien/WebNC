@page
@model WebShopSolution.Admin.Pages.Statistics.StatisticsByYearModel
@{
    ViewData["Title"] = "Revenue Statistics by Year";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Year</th>
            <th>Total Orders</th>
            <th>Total Revenue</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stat in Model.Statistics)
        {
            <tr>
                <td>@stat.Year</td>
                <td>@stat.TotalOrders</td>
                <td>@stat.TotalRevenue.ToString("N0") ₫</td>
            </tr>
        }
    </tbody>
</table>

<canvas id="chart" height="100"></canvas>

<div class="mt-3">
    <a class="btn btn-success" href="/Statistics/StatisticsByYear?handler=ExportExcel">Export to Excel</a>
    <a class="btn btn-danger" href="/Statistics/StatisticsByYear?handler=ExportPdf">Export to PDF</a>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const labels = @Html.Raw(Json.Serialize(Model.Statistics.Select(x => x.Year)));
        const data = @Html.Raw(Json.Serialize(Model.Statistics.Select(x => x.TotalRevenue)));

        const ctx = document.getElementById('chart').getContext('2d');
        const chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Revenue (VND)',
                    data: data,
                    backgroundColor: 'rgba(75, 192, 192, 0.6)'
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return value.toLocaleString('vi-VN') + ' ₫';
                            }
                        }
                    }
                }
            }
        });
    </script>
}