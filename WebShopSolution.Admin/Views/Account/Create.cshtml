@model WebShopSolution.ViewModels.Catalog.Account.AccountCreateRequest

<h2>Create Account</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>UserName</label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input asp-for="PassWord" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label>Role</label>
        <select asp-for="Role" class="form-control" onchange="toggleCustomerFields(this.value)">
            <option value="Admin">Admin</option>
            <option value="User">User</option>
        </select>
    </div>

    <div id="customerFields" style="display: none;">
        <h4>Customer Information</h4>
        <div class="form-group">
            <label>Name</label>
            <input asp-for="CusName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Phone</label>
            <input asp-for="Phone" class="form-control" />
        </div>
        <div class="form-group">
            <label>Address</label>
            <input asp-for="Address" class="form-control" />
        </div>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
</form>

@section Scripts {
    <script>
        function toggleCustomerFields(role) {
            var section = document.getElementById("customerFields");
            if (role === "User") {
                section.style.display = "block";
            } else {
                section.style.display = "none";
            }
        }

        // Gọi hàm ngay nếu form đang chọn "User"
        document.addEventListener("DOMContentLoaded", function () {
            var role = document.querySelector('[name="Role"]').value;
            toggleCustomerFields(role);
        });
    </script>
}
