@model WebShopSolution.ViewModels.Catalog.Category.CategoryCreateRequest

@{
    ViewData["Title"] = "Thêm danh mục";
    var parentCategories = ViewBag.Categories as List<WebShopSolution.ViewModels.Catalog.Category.CategoryViewModel>;
}

<h2>Thêm danh mục</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Tên danh mục</label>
        <input asp-for="CateName" class="form-control" />
        <span asp-validation-for="CateName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Danh mục cha (nếu có)</label>
        <select asp-for="ParentId" class="form-control">
            <option value="">-- Không chọn (Danh mục cha) --</option>
            @foreach (var cate in parentCategories)
            {
                <option value="@cate.IdCate">@cate.CateName</option>
            }
        </select>
    </div>


    <button type="submit" class="btn btn-success">Lưu</button>
</form>

